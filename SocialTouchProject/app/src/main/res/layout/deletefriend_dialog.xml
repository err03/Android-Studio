<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_deleteFriendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Are you sure you want to delete?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yesDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="yes"
        app:layout_constraintStart_toStartOf="@+id/tv_deleteFriendMessage"
        app:layout_constraintTop_toBottomOf="@+id/tv_deleteFriendMessage" />

    <Button
        android:id="@+id/noDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="no"
        app:layout_constraintEnd_toEndOf="@+id/tv_deleteFriendMessage"
        app:layout_constraintTop_toBottomOf="@+id/tv_deleteFriendMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>